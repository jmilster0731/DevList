<%- include('../partials/header') %>

    <div class="content-container">
        <h2>The Inputs will turn green once you've placed enough information within our system!</h2><br>
        <form action="/queries" method="POST">
            <label>Title:</label>
            <input type="text" name="title" minlength="5" maxlength="32" required>
            <label>Programming Language:</label>
            <select name="language">
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
                <option value="Go">Go</option>
                <option value="Java">Java</option>
                <option value="Kotlin">Kotlin</option>
                <option value="PHP">PHP</option>
                <option value="C#">C#</option>
                <option value="Swift">Swift</option>
                <option value="R">R</option>
                <option value="Ruby">Ruby</option>
                <option value="C or C++">C or C++</option>
                <option value="Matlab">Matlab</option>
                <option value="TypeScript">TypeScript</option>
                <option value="Scala">Scala</option>
                <option value="SQL">SQL</option>
                <option value="HTML">HTML</option>
                <option value="CSS">CSS</option>
                <option value="NoSQL">NoSQL</option>
                <option value="Rust">Rust</option>
                <option value="Perl">Perl</option>
            </select>
            <label>Img (optional): include a source link for an image if you'd like</label>
            <input type="text" name="contentImg">
            <label>Content:</label>
            <textarea name="content" minlength="20" required></textarea><br>
            <div class="submit-div-cheat">
                <div class="filler"></div><div class="filler"></div>
                <input type="submit">
            </div>
        </form>
    </div>

<%- include('../partials/footer') %>