<%- include('../partials/header') %>

<div class="content-container">
    <h2>Only change the fields you want to update!</h2>
    <h3>They will turn green again once you have put in enough information...</h3><br>
    <form action="/queries/<%= query._id %>?_method=PUT" method="POST">
        <label>Title:</label>
        <input type="text" name="title" value="<%= query.title %>" minlength="5" maxlength="50">
        <label>Programming Language:</label>
        <select name="language">
            <option value="<%= query.language %>" selected><%= query.language %></option>
            <option value="JavaScript">JavaScript</option>
            <option value="Python">Python</option>
            <option value="Go">Go</option>
            <option value="Java">Java</option>
            <option value="Kotlin">Kotlin</option>
            <option value="PHP">PHP</option>
            <option value="C#">C#</option>
            <option value="Swift">Swift</option>
            <option value="R">R</option>
            <option value="Ruby">Ruby</option>
            <option value="C or C++">C or C++</option>
            <option value="Matlab">Matlab</option>
            <option value="TypeScript">TypeScript</option>
            <option value="Scala">Scala</option>
            <option value="SQL">SQL</option>
            <option value="HTML">HTML</option>
            <option value="CSS">CSS</option>
            <option value="NoSQL">NoSQL</option>
            <option value="Rust">Rust</option>
            <option value="Perl">Perl</option>
        </select>
        <label>Content Image Link:</label>
        <input type="text" name="contentImg" value="<%= query.contentImg %>">
        <label>Content:</label>
        <textarea name="content" minlength="25"><%= query.content %></textarea><br>
        <div class="submit-div-cheat">
            <div class="filler"></div><div class="filler"></div>
            <button type="submit">Confirm Edits</button>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>